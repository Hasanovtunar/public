<!-- Product Section Start -->
<div class="section-padding-03 custom-container-four pt-0">
    <div class="product-row">
        <div class="product-wrapper ps-md-5 ps-lg-6 ps-xl-8 ps-xxl-11 order-2">
            <!-- Section Title Start -->
            <div class="section-title-05">
                <h5 class="section-title-05__title"><span>Yeni Mebellər</span></h5>
                <a href="/gallery" class="read-more"><span>Mebellər</span><i class="lastudioicon lastudioicon-right-arrow"></i></a>
            </div>
            <!-- Section Title End -->

            <div class="product-active-three">
                <div class="swiper">
                    <div class="swiper-wrapper">
                        <% products.forEach(function(product) { %>
                        <% if (product.New === true) { %>
                        <!-- swiper-slide start -->
                        <div class="swiper-slide">
                            <!-- Product Item Start -->
                            <div class="product-item product-item-05 border text-center">
                                <div class="product-item__image">
                                    <a href="single-product.html"><img width="250" height="250" src="<%= product.imageUrl %>" alt="Product"></a>
                                </div>
                                <div class="product-item__content" style="margin-top: 15px;">
                                    <h5 class="product-item__title"><a href="/category" style="font-size: 1.4rem;"><%= product.name %></a></h5>
                                </div>
                            </div>
                            <!-- Product Item End -->
                        </div>
                        <!-- swiper-slide end -->
                        <% } %>
                        <% }); %>
                    </div>
                </div>
                <div class="swiper-button-next"><i class="lastudioicon-arrow-right"></i></div>
                <div class="swiper-button-prev"><i class="lastudioicon-arrow-left"></i></div>
            </div>
        </div>
            <!-- Ad Banner End -->
        </div>
    </div>
</div>
<!-- Product Section End -->
